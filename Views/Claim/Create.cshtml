@{
    ViewData["Title"] = "Submit Claim";
}

<h2>Submit Claim (Prototype)</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form asp-action="Submit" method="post">
    <div class="form-group mb-2">
        <label>Claim Month</label>
        <input class="form-control" type="text" name="Month" placeholder="e.g. September 2025" />
    </div>

    <div class="form-group mb-2">
        <label>Total Hours (simulation)</label>
        <input class="form-control" type="number" name="Hours" />
    </div>

    <div class="form-group mb-2">
        <label>Hourly Rate (simulation)</label>
        <input class="form-control" type="number" name="Rate" step="0.01" />
    </div>

    <div class="form-group mb-3">
        <label>Supporting Documents (UI only)</label>
        <input class="form-control" type="file" disabled />
        <small class="form-text text-muted">File upload disabled in prototype</small>
    </div>

    <button type="submit" class="btn btn-success">Submit Claim</button>
    <a asp-controller="Claim" asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
