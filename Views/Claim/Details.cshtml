@model ContractMonthlyClaimSystem.Models.Claim
@{
    ViewData["Title"] = "Claim Details";
}

<h2>Claim Details</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<dl class="row">
    <dt class="col-sm-3">Claim ID</dt>
    <dd class="col-sm-9">@Model.ClaimId</dd>

    <dt class="col-sm-3">Month</dt>
    <dd class="col-sm-9">@Model.Month</dd>

    <dt class="col-sm-3">Total Amount</dt>
    <dd class="col-sm-9">R @Model.TotalAmount</dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@Model.Status</dd>

    <dt class="col-sm-3">Submitted</dt>
    <dd class="col-sm-9">@Model.SubmittedAt.ToString("yyyy-MM-dd HH:mm")</dd>
</dl>

<form asp-action="Approve" method="post">
    <input type="hidden" name="id" value="@Model.ClaimId" />
    <button type="submit" class="btn btn-success">Approve Claim</button>
    <a asp-controller="Claim" asp-action="Index" class="btn btn-secondary ms-2">Back to Claims</a>
</form>
